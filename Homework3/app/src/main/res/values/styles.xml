<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/greyish_brown</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="TextInputLayoutTheme">
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TextInputEditTextTheme">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColorHint">@color/warm_grey</item>
    </style>

</resources>
