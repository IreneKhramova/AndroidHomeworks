<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Task1Activity">

    <TextView
        android:id="@+id/textViewPoem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task1_poem"
        android:textColor="@color/task1_text_color"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/imageViewSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_task1" />

    <Button
        android:id="@+id/buttonVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task1_version_text" />

</LinearLayout>