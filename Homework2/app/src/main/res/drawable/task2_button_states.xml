<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="7dp" android:topRightRadius="7dp" />
            <solid android:color="#D46610" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="7dp" android:topLeftRadius="7dp" />
            <solid android:color="#D46610" />
        </shape>
    </item>

</selector>